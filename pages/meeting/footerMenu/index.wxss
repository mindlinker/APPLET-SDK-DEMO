._footer-menu-panel,
._footer-menu-wrapper {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}
._footer-menu-wrapper {
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  overflow: visible;
}
._footer-menu-panel {
  background-color: #1a1a1a;
  transition: all ease-in 0.25s;
}
._footer-menu-panel ._footer-menu-title {
  text-align: center;
  margin-bottom: 2rpx;
  color: #666;
  background-color: #1a1a1a;
  font-size: 14px;
  height: 34px;
  line-height: 34px;
}
._footer-menu-panel ._footer-menu-item {
  font-size: 18px;
  text-align: center;
  height: 50px;
  line-height: 50px;
  background-color: #222;
  color: #fff;
}
._footer-menu-panel ._footer-menu-item:last-of-type {
  margin-top: 5rpx;
}
