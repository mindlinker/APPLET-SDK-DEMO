/* 侧边栏 */
._drawer-wrapper-detail-panel,
._drawer-wrapper-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  background-color: transparent;
  z-index: 200;
  overflow: visible;
}
._drawer-side-panel {
  position: absolute;
  height: 100%;
  right: 0;
  top: 0;
  width: 396rpx;
  max-width: 400px;
  background-color: #222;
  padding: 33rpx 33rpx 18rpx;
  z-index: 300;
}
._drawer-side-icon,
._drawer-side-icon::after {
  position: absolute;
  left: 0;
  height: 100rpx;
  width: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}
._drawer-side-icon::after {
  display: block;
  content: '';
  left: 9rpx;
  background-color: #666;
  border-radius: 10rpx;
  height: 54.5rpx;
  width: 4px;
}

.detailWrapper {
  color: #fff;
}
.detailWrapper .mainPanel .title {
  font-size: 18px;
  margin-bottom: 22rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  font-weight: 700;
}
.detailWrapper .mainPanel .detailItem {
  word-break: break-all;
  display: flex;
  justify-content: start;
  align-items: flex-start;
  margin-bottom: 12px;
}
.detailWrapper .mainPanel .detailItem text {
  font-size: 14px;
  width: 245rpx;
  text-align: left;
  display: inline-block;
  line-height: 1em;
}
.detailWrapper .mainPanel .detailItem text:first-of-type {
  color: #999;
  width: 80px;
}
.detailWrapper .mainPanel .sipItem {
  margin-top: 16rpx;
}
.detailWrapper .copyBtn {
  position: absolute;
  bottom: 33rpx;
  width: calc(100% - 66rpx);
  font-size: 14px;
  height: 45px;
  line-height: 45px;
  color: #fff;
  border-radius: 4.5rpx;
  background-color: #ff6b00;
  display: flex;
  justify-content: center;
  align-items: center;
}
