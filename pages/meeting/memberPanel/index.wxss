/* 侧边栏 */
._drawer-wrapper,
._drawer-wrapper-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  background-color: transparent;
  z-index: 200;
  overflow: visible;
}
._drawer-side-panel {
  position: absolute;
  height: 100%;
  right: 0;
  top: 0;
  width: 396rpx;
  max-width: 400px;
  background-color: #222;
  padding: 33rpx 33rpx 18rpx;
  z-index: 300;
}
._drawer-side-icon,
._drawer-side-icon::after {
  position: absolute;
  left: 0;
  height: 100rpx;
  width: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}
._drawer-side-icon::after {
  display: block;
  content: '';
  left: 9rpx;
  background-color: #666;
  border-radius: 10rpx;
  height: 54.5rpx;
  width: 4px;
}

.memberWrapper {
  z-index: 500;
  color: #fff;
  padding: 20rpx 0 16rpx 30rpx;
  height: 100%;
}
.memberWrapper .title {
  font-size: 16px;
  text-align: center;
  margin-bottom: 10rpx;
}
.memberWrapper .memberList {
  overflow: scroll;
  height: calc(100% - 30rpx);
}

.memberItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}
.memberItem .avatarContainer {
  width: 34px;
  height: 34px;
  flex-basis: 34px;
  flex-shrink: 0;
}
.memberItem .avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.memberItem .defaultAvatar {
  text-align: center;
  background-color: #fff;
  line-height: 34px;
  color: #000;
  font-size: 15px;
}
.memberItem .statusIcon {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 40%;
  position: relative;
}
.memberItem .speakerLabel {
  width: 20px;
  height: 20px;
  margin-right: 14rpx;
  position: relative;
}
.memberItem .audioLabel {
  width: 20px;
  height: 20px;
  position: relative;
  margin-right: 33rpx;
}
.memberItem .audioLabel image,
.memberItem .speakerLabel image {
  position: absolute;
  width: 20px;
  height: 20px;
  top: 0;
  left: 0;
}
.memberItem .moreLabel {
  position: absolute;
  right: 10rpx;
  margin-right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.memberItem .moreLabel image {
  left: auto;
  right: 0;
  width: 12px;
}
.memberItem .detail {
  width: 60%;
  height: 41px;
  padding: 5px 0 5px 7rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}
.memberItem .detail .detailTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
  width: 100%;
  font-size: 16px;
}
.memberItem .detail .detailTitle .memberName {
  max-width: 150rpx;
  display: inline-block;
  text-overflow: ellipsis;
  overflow: hidden;
  vertical-align: top;
  line-height: 16px;
  white-space: nowrap;
}
.memberItem .detail .detailTitle .mainScreenLabel,
.memberItem .detail .detailTitle .selfLabel {
  display: inline-block;
  color: #999;
  vertical-align: middle;
}
.memberItem .detail .centerTitle {
  display: flex;
  align-items: center;
}
.memberItem .detail .detailLabel {
  display: flex;
  justify-self: start;
  align-items: flex-start;
  font-size: 10px;
  margin-top: 1px;
}
.memberItem .detail .detailLabel view {
  margin-right: 8rpx;
  padding: 0 2rpx;
  line-height: 12px;
  height: 12px;
  border-radius: 1px;
}
.memberItem .detail .detailLabel .hostLabel {
  background-color: #ff6b00;
}
.memberItem .detail .detailLabel .mainVenueLabel {
  background-color: #3594f9;
}

.memberItem .detail .detailLabel .mainScreenLabel {
  background-color: #1ebe11;
}
