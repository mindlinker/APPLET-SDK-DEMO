view {
  box-sizing: border-box;
}

.pageContainer {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #f5f5f5;
}

.audioPullPlayer {
  position: fixed;
  left: 9999rpx;
  top: 9999rpx;
  width: 0;
  height: 0;
  z-index: -1;
}
.fullScreenBtn {
  position: fixed;
  width: 28rpx;
  height: 80rpx;
  transform: translateY(-50%);
  z-index: 50;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.fullScreenBtn image {
  width: 18rpx;
  height: 67.2rpx;
}
.fullScreenModeBtn,
.fullScreenModeIcon {
  right: 0;
}
.fixedMainScreen {
  position: fixed;
  color: #fff;
  z-index: 50;
  width: 42px;
  height: 42px;
  border-radius: 100%;
}
.fixedMainScreen image {
  height: 100%;
  width: 42px;
  right: 0;
}
.scrollBarContainer {
  position: fixed;
  right: 0;
  width: 8px;
  height: 100%;
  background-color: rgba(34, 34, 34, 0.8);
  z-index: 85;
  padding: 4px 0;
}
.scrollBarContainer .scrollBar {
  top: 4px;
  left: 2px;
  width: 4px;
  border-radius: 7px;
  background-color: #666;
  transition: all ease-in 0.25s;
}
.changeScreenContainer {
  position: fixed;
  right: 0;
  height: 100%;
  z-index: 70;
}
.changeScreen {
  width: 100%;
  height: 10%;
  left: 0;
}
.preScreen {
  position: absolute;
  top: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), transparent);
}
.nextScreen {
  position: absolute;
  bottom: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}
.hide {
  position: fixed;
  left: 9999rpx !important;
  top: 9999rpx !important;
  width: 0 !important;
  height: 0 !important;
  z-index: -1;
}
live-player,
live-pusher {
  height: 100%;
  width: 100%;
}
.unsupportTips {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 7rpx 13rpx;
  background-color: rgba(0, 0, 0, 0.65);
  border-radius: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  white-space: nowrap;
  z-index: 1000;
}
.unsupportTips .mainText {
  font-size: 15px;
}
.unsupportTips .closeIcon {
  margin-left: 16rpx;
  font-size: 16px;
  color: #fff;
  width: 14px;
  height: 14px;
}
page {
  height: 100%;
  overflow: hidden;
}
.meetingMain {
  height: 100%;
  overflow: hidden;
  position: relative;
  background-color: #000;
}
.meetingMain .joiningTips {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 12px;
}
.meetingMain .meetingWrapper {
  position: relative;
}
.meetingMain .confirmModal,
.meetingMain .noticeModal {
  width: 300px;
}
.meetingMain .confirmModal ._modal-title,
.meetingMain .noticeModal ._modal-title {
  font-size: 14px;
  font-weight: 400;
  white-space: normal;
  color: #999;
}
.meetingMain .reconnectTips {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 6px;
  padding: 10px 12px;
}
.meetingMain .reconnectTips image {
  width: 14px;
  height: 14px;
  margin-right: 6rpx;
  animation: loading 1.5s linear infinite;
}
.modal {
  width: 300rpx !important;
  border-radius: 8rpx;
}
.modal.onFocus {
  transform: translateY(-100rpx);
}
.modal ._modal-modalMainPanel {
  padding: 10rpx;
  justify-content: flex-start;
  min-height: auto !important;
}
.modal ._modal-title {
  font-weight: 700;
}
.modal .input {
  font-size: 18rpx;
  text-align: left;
}
.modal .placeholder {
  color: #ccc;
}
