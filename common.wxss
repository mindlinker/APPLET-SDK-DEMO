@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(90deg);
  }
  50% {
    transform: rotate(180deg);
  }
  75% {
    transform: rotate(270deg);
  }
  to {
    transform: rotate(360deg);
  }
}
view {
  box-sizing: border-box;
}
button,
input {
  text-align: center;
}
input {
  width: 100%;
  height: 100%;
  font-size: 40rpx;
  color: #333;
  line-height: 108rpx;
  font-weight: 400;
}
button {
  border-radius: 8rpx;
  border: 0;
  outline: 0;
  letter-spacing: 0;
}
button[type='primary'],
button[type='primary']:active {
  background-color: #ff6b00;
}
button[type='primary'][aria-disabled='true'] {
  background-color: #ffa666;
  border-color: #ffa666;
  outline-color: #ffa666;
  box-shadow: none;
  color: #fff;
}
button[type='primary'].button-hover {
  background-color: #ff6b00;
}
button.button-hover[type='default'] {
  color: #c50;
}
button[type='default'] {
  color: #ff6b00;
}
button[type='default'][aria-disabled='true'] {
  color: #ffa666;
}
button[type='default']::active,
button[type='default']::focus {
  color: #c50;
}
.wx-switch-input {
  width: 88rpx !important;
  height: 48rpx !important;
}
.wx-switch-input::before {
  width: 85rpx !important;
  height: 45rpx !important;
}
.wx-switch-input::after {
  width: 45rpx !important;
  height: 45rpx !important;
}
._toast-container {
  position: fixed;
  z-index: 999;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 6px;
  padding: 10px 12px;
  color: #fff;
  font-size: 14px;
}
._toast-container ._title {
  display: block;
  width: max-content;
}
._toast-container ._desc {
  text-align: center;
}
._toast-hidden {
  display: none;
}
._toast-middle {
  top: 50%;
  transform: translate(-50%, -50%);
}
._toast-bottom {
  top: 82%;
}

._modal-button {
  display: block;
  border: 0;
  background-color: #fff;
  width: 100%;
  line-height: 45rpx;
  text-align: center;
}
._modal-button::after {
  border: 0;
}
._modal-wrapper {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 800;
}
._modal-wrapper ._modal-container {
  position: relative;
  width: 240rpx;
  border-radius: 16rpx;
  background-color: #fff;
  overflow: hidden;
}
._modal-wrapper ._modal-container ._modal-modalMainPanel {
  padding: 25rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  min-height: 106rpx;
  color: #666;
  word-break: break-all;
}
._modal-wrapper ._modal-container ._modal-modalMainPanel ._modal-title {
  text-align: center;
  font-size: 16px;
  color: #333;
}
._modal-wrapper ._modal-container ._modal-confirmFooter,
._modal-wrapper ._modal-container ._modal-noticeFooter {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 45rpx;
}
._modal-wrapper ._modal-container ._modal-confirmFooter button,
._modal-wrapper ._modal-container ._modal-noticeFooter button {
  font-size: 16px;
}
._modal-wrapper ._modal-container ._modal-confirmFooter button._modal-cancelBtn,
._modal-wrapper ._modal-container ._modal-noticeFooter button._modal-cancelBtn {
  color: #999;
  border-radius: 0;
  border-right: 1px solid #dfe2e5;
}
._modal-wrapper
  ._modal-container
  ._modal-confirmFooter
  button._modal-confirmBtn,
._modal-wrapper
  ._modal-container
  ._modal-noticeFooter
  button._modal-confirmBtn {
  color: #ff6b00;
}
._modal-wrapper
  ._modal-container
  ._modal-confirmFooter
  button._modal-confirmBtn-disabled,
._modal-wrapper
  ._modal-container
  ._modal-noticeFooter
  button._modal-confirmBtn-disabled {
  color: #999;
}
._modal-wrapper ._modal-container ._modal-confirmFooter ._modal-noticeBtn,
._modal-wrapper ._modal-container ._modal-noticeFooter ._modal-noticeBtn {
  width: 100%;
  color: #ff6b00;
}
._modal-wrapper ._modal-modalDvide {
  background-color: #dfe2e5;
  width: 100%;
  height: 1px;
}
._modal-wrapper ._modal-container-portrait {
  width: 550rpx;
}
._modal-wrapper ._modal-container-portrait ._modal-title {
  text-align: center;
  font-size: 36rpx;
  color: #333;
  margin-bottom: 30rpx;
}
._modal-wrapper ._modal-container-portrait ._modal-modalMainPanel {
  padding: 36rpx 48rpx;
  font-size: 28rpx;
  min-height: 204rpx;
  text-align: center;
}
._modal-wrapper ._modal-container-portrait ._modal-confirmFooter,
._modal-wrapper ._modal-container-portrait ._modal-noticeFooter {
  height: 89rpx;
}
._modal-wrapper ._modal-container-portrait ._modal-confirmFooter button,
._modal-wrapper ._modal-container-portrait ._modal-noticeFooter button {
  font-size: 30rpx;
  line-height: 89rpx;
}
._modal-wrapper
  ._modal-container-portrait
  ._modal-confirmFooter
  button._modal-cancelBtn,
._modal-wrapper
  ._modal-container-portrait
  ._modal-noticeFooter
  button._modal-cancelBtn {
  border-right: 1px solid #dfe2e5;
}
.container {
  width: 550rpx;
  height: auto;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.container .title {
  display: inline-block;
  padding: 36rpx 0 48rpx;
  font-size: 36rpx;
  font-weight: 700;
  width: 100%;
  text-align: center;
}
.container .contentWrapper {
  width: 100%;
  border-bottom: 1rpx solid #dfe2e5;
}
.container .contentWrapper .mainText {
  color: #666;
  font-size: 24rpx;
  line-height: 1.75em;
  padding: 0 48rpx;
}
.container .contentWrapper .descContent {
  margin: 36rpx 0 48rpx;
  text-indent: 2em;
}
.container .contentWrapper .content {
  width: 100%;
  white-space: pre-wrap;
  word-break: break-all;
  word-wrap: break-word;
  word-spacing: 2em;
}
.container .contentWrapper .linkText {
  color: #ff6b00;
}
.container .btnWrapper {
  display: flex;
  justify-content: space-between;
  width: 100%;
  border-top: 1rpx solid rgba(25, 31, 37, 0.08);
  height: 88rpx;
}
.container .btnWrapper button,
.container .btnWrapper navigator {
  font-size: 30rpx;
  display: block;
  border: 0;
  border-radius: 0;
  width: 100%;
  line-height: 88rpx;
  text-align: center;
  padding: 0;
}
.container .btnWrapper button::active,
.container .btnWrapper button::focus,
.container .btnWrapper navigator::active,
.container .btnWrapper navigator::focus {
  border-radius: 0;
}
.container .btnWrapper button::after,
.container .btnWrapper navigator::after {
  border: 0;
}
.container .btnWrapper .cancelBtn {
  background-color: #fff;
  color: #666;
  border-radius: 0;
  border-right: 1rpx solid #dfe2e5;
  flex: 1;
  flex-shrink: 0;
}
.container .btnWrapper .confirmBtn {
  background-color: #fff;
  font-weight: 400;
  flex: 1;
  flex-shrink: 0;
}
